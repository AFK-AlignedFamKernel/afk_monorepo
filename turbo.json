{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "EXPO_PUBLIC_NETWORK",
    "EXPO_PUBLIC_PROVIDER_URL",
    "EXPO_PUBLIC_BACKEND_URL",
    "EXPO_PUBLIC_WC_ID",
    "ACCOUNT_ADDRESS",
    "ACCOUNT_PRIVATE_KEY",
    "PROVIDER_URL",
    "NETWORK_NAME",
    "PINATA_API_KEY",
    "PINATA_SECRET_API_KEY",
    "IPFS_GATEWAY",
    "INDEXER_DATABASE_URL",
    "TELEGRAM_BOT_TOKEN",
    "TELEGRAM_WEB_APP",
    "TG_ADMIN_CHAT_ID",
    "TELEGRAM_MOBILE_APP",
    "EXPO_PUBLIC_PIXEL_URL",
    "NEXT_PUBLIC_BACKEND_URL",
    "NEXT_PUBLIC_NODE_ENV",
    "NEXT_PUBLIC_CANVAS_NFT_CONTRACT_ADDRESS",
    "NEXT_PUBLIC_CANVAS_STARKNET_CONTRACT_ADDRESS",
    "NEXT_PUBLIC_CHAIN_ID",
    "NEXT_PUBLIC_PROVIDER_URL",
    "EXPO_PUBLIC_INDEXER_BACKEND_URL",
    "EXPO_PUBLIC_DYNAMIC_API_KEY",
    "TWILIO_ACCOUNT_SSID",
    "TWILIO_AUTH_TOKEN",
    "TWILIO_SERVICE_ID",
    "DEPLOYER_ADDRESS",
    "DEPLOYER_PK",
    "RPC_NODE_API_KEY",
    "JWT_SECRET",
    "EXPO_PUBLIC_LAYERSWAP_CLIENT_ID",
    "EXPO_PUBLIC_LAYERSWAP_API_KEY",
    "EXPO_PUBLIC_GOOGLE_TAG_ID"

  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**"
      ],
      "env": [
        "DB_URL_MONGODB",
        "PINATA_API_KEY",
        "PINATA_API_SECRET_KEY",
        "PINATA_JWT",
        "LAUNCHING_FACTORY",
        "PINATA_GATEWAY_KEY",
        "NEXT_PUBLIC_APP_URL",
        "TELEGRAM_BOT_TOKEN",
        "TELEGRAM_WEB_APP",
        "INDEXER_DATABASE_URL",
        "TELEGRAM_MOBILE_APP",
        "EXPO_PUBLIC_PIXEL_URL",
        "NEXT_PUBLIC_BACKEND_URL",
        "NEXT_PUBLIC_NODE_ENV"
      ]
    },
    "run": {
      "env": [
        "DB_URL_MONGODB",
        "PINATA_API_KEY",
        "PINATA_API_SECRET_KEY",
        "PINATA_JWT",
        "LAUNCHING_FACTORY",
        "PINATA_GATEWAY_KEY",
        "NEXT_PUBLIC_PINATA_JWT",
        "APP_URL",
        "NEXT_PUBLIC_WALLET_CONNECT_ID",
        "EXPO_PUBLIC_PIXEL_URL",
        "NEXT_PUBLIC_BACKEND_URL",
        "NEXT_PUBLIC_NODE_ENV"
      ]
    },
    "deploy": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "db:migrate:deploy": {},
    "db:seed": {},
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "generate": {
      "dependsOn": [
        "^generate"
      ]
    },
    "dev": {
      "dependsOn": [
        "^db:generate"
      ],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}