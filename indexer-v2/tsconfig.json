{
    "compilerOptions": {
      "target": "ESNext",
      "allowJs": true,
      "declaration": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "lib": ["ES2023"],
      "noEmit": true,
      "types": ["node"],
      "moduleResolution": "Bundler",
      "module": "NodeNext",
      "esModuleInterop": true
    },
    "include": ["src/**/*", ".apibara/**/*", "**/.js", "**/.ts"],
    "exclude": ["node_modules"]
  }