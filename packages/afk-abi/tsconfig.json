{
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "target": "ES6",
    "module": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "abi/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}