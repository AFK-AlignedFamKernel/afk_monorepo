{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../",
    "composite": true,
    "target": "ES6",
    "module": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"],
      "common": ["../common/src"],
      "afk_sdk": ["../afk_sdk/src"],
      "afk_react_sdk": ["../afk_react_sdk/src"]
    }
  },
  "include": [
    "src/**/*",
    "../common/**/*",
    "../afk_sdk/**/*",
    "../afk_react_sdk/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    { "path": "../common" },
    { "path": "../afk_sdk" },
    { "path": "../afk_react_sdk" }
  ]
}