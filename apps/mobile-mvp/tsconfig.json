{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "afk_nostr_sdk": [
        "../../packages/afk_nostr_sdk/src"
      ],
      "common": [
        "../../packages/common/src"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.json",
    "**/*.css",
    "**/*.scss",
    "**/*.sass",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
